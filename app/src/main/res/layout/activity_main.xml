<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerPrimaryMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".view.MainActivity">

    <ProgressBar
        android:id="@+id/pbMainLoading"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraineLayoutContainerWeather"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivLocationMain"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_twotone_place_24" />

        <TextView
            android:id="@+id/tvLocationMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/tvLocation"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/ivLocationMain"
            app:layout_constraintTop_toTopOf="@+id/ivLocationMain" />

        <TextView
            android:id="@+id/tvWeatherMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sense"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvTemperatureMain"
            app:layout_constraintStart_toStartOf="@+id/tvTemperatureMain"
            app:layout_constraintTop_toBottomOf="@+id/tvTemperatureMain" />

        <ImageView
            android:id="@+id/ivCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/tvTemperatureMain"
            app:layout_constraintTop_toTopOf="@+id/tvTemperatureMain"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTemperatureMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:text="@string/temperature"
            android:textColor="@color/white"
            android:textSize="100sp"
            app:layout_constraintEnd_toEndOf="@+id/tvLocationMain"
            app:layout_constraintStart_toStartOf="@+id/tvLocationMain"
            app:layout_constraintTop_toBottomOf="@+id/tvLocationMain" />

        <TextView
            android:id="@+id/tvDateMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/date"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/tvWeatherMain"
            app:layout_constraintStart_toStartOf="@+id/tvWeatherMain"
            app:layout_constraintTop_toBottomOf="@+id/tvWeatherMain" />

        <View
            android:id="@+id/dividerCv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/light_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPressure" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glStatus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glStatus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <ImageView
            android:id="@+id/ivWind"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toStartOf="@+id/glStatus1"
            app:layout_constraintHorizontal_bias="0.539"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDateMain"
            app:srcCompat="@drawable/wind"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ivPressure"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@+id/glStatus2"
            app:layout_constraintStart_toStartOf="@+id/glStatus1"
            app:layout_constraintTop_toTopOf="@+id/ivWind"
            app:srcCompat="@drawable/pressure"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ivHumidity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/glStatus2"
            app:layout_constraintTop_toTopOf="@+id/ivPressure"
            app:srcCompat="@drawable/humidity"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/stringTvWind"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tvWindValue"
            app:layout_constraintStart_toStartOf="@+id/tvWindValue"
            app:layout_constraintTop_toBottomOf="@+id/tvWindValue"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/tvWindValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/stringTvValueWind"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ivWind"
            app:layout_constraintStart_toStartOf="@+id/ivWind"
            app:layout_constraintTop_toBottomOf="@+id/ivWind"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/tvPressureValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/stringTvValuePressure"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ivPressure"
            app:layout_constraintStart_toStartOf="@+id/ivPressure"
            app:layout_constraintTop_toBottomOf="@+id/ivPressure"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/tvPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/stringTvPressure"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tvPressureValue"
            app:layout_constraintStart_toStartOf="@+id/tvPressureValue"
            app:layout_constraintTop_toBottomOf="@+id/tvPressureValue"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/tvValueHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/stringTvValueHumidity"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ivHumidity"
            app:layout_constraintStart_toStartOf="@+id/ivHumidity"
            app:layout_constraintTop_toBottomOf="@+id/ivHumidity"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/tvHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/stringTvHumidity"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tvValueHumidity"
            app:layout_constraintStart_toStartOf="@+id/tvValueHumidity"
            app:layout_constraintTop_toBottomOf="@+id/tvValueHumidity"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_twotone_device_thermostat_24" />

        <TextView
            android:id="@+id/tvTemperatureMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/stringTemperatureMax"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/tvTemperatureMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/stringTemperatureMin"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tvTemperatureMax"
            app:layout_constraintStart_toStartOf="@+id/tvTemperatureMax"
            app:layout_constraintTop_toBottomOf="@+id/tvTemperatureMax" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_next_hours"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:clipChildren="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerCv" />

        <TextView
            android:id="@+id/tvSimbolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="°"
            android:textColor="@color/medium_white"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tvTemperatureMain"
            app:layout_constraintTop_toTopOf="@+id/tvTemperatureMain" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_day"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view_next_hours"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_next_hours"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_next_hours" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>